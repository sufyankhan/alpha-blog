<div class="col-sm-8">
<h1>All Alpha Bloggers</h1>
<%= will_paginate %>
<% @users.each do |user| %>
 <div align="center">
  <ul class="listing">
      <div class="row">
          <div class="well">
              <li><%= link_to gravatar_for(user), user_path(user) %></li>
              <li class="article-title"><%= link_to user.username, user_path(user) %></li>
              <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
              <% if logged_in? and current_user.admin? %>
               <li><%= link_to "Delete this User", user_path(user), method: :delete, 
                                data: {confirm: "Are you sure you want to delete the user and all their articles?"} %></li>
               <li><%= link_to "Edit this User", edit_user_path(user) %></li>
              <% end %>
          </div>
      </div>
  </ul>
  </div>
  <% end %>
<%= will_paginate %>
</div>